FROM node:22-slim AS builder

SHELL ["/bin/bash", "-o", "pipefail", "-c"]

RUN apt-get update && apt-get install -y --no-install-recommends && \
    rm -rf /var/lib/apt/lists/* && \
    mkdir -p /home/owasp && \
    chown -R node:node /home/owasp && \
    npm install -g pnpm

WORKDIR /home/owasp

COPY package.json pnpm-lock.yaml ./
RUN pnpm install

