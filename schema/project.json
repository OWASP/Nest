{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/OWASP/Nest/main/schema/project.json",
  "$defs": {
    "community": {
      "$ref": "./schema/definitions/community.json"
    },
    "leader": {
      "$ref": "./schema/definitions/person.json"
    },
    "repository": {
      "$ref": "./schema/definitions/repository.json"
    },
    "socialMedia": {
      "$ref": "./schema/definitions/socialMedia.json"
    },
    "sponsor": {
      "$ref": "./schema/definitions/sponsor.json"
    }
  },

  "additionalProperties": false,
  "description": "OWASP schema.",
  "properties": {
    "audience": {
      "description": "The intended audience for the project.",
      "enum": ["breaker", "builder", "defender"],
      "enumDescriptions": [
        "Security testers and ethical hackers.",
        "Developers and engineers.",
        "Security professionals and defenders."
      ],
      "type": "string"
    },
    "blog": {
      "description": "Project's blog.",
      "format": "uri",
      "type": "string"
    },
    "community": {
      "description": "A list of community platforms associated with the project.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/community"
      },
      "minItems": 1,
      "uniqueItems": true,
      "optional": true
    },
    "demo": {
      "description": "Optional URL to the project demo.",
      "format": "uri",
      "type": "string"
    },
    "documentation": {
      "description": "Optional URLs to project documentation.",
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 1,
      "uniqueItems": true,
      "optional": true
    },
    "downloads": {
      "description": "Optional list of download URLs.",
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 1,
      "uniqueItems": true,
      "optional": true
    },
    "events": {
      "description": "Event URLs related to the project.",
      "type": "array",
      "items": {
        "format": "uri",
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "leaders": {
      "description": "Leaders of the project.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/leader"
      },
      "minItems": 2,
      "uniqueItems": true
    },
    "level": {
      "default": 2,
      "description": "The numeric level of the project.",
      "enum": [2, 3, 3.5, 4],
      "enumDescriptions": ["Incubator", "Lab", "Production", "Flagship"],
      "title": "Project level.",
      "type": "number"
    },
    "license": {
      "description": "The license of the project.",
      "enum": [
        "AGPL-3.0",
        "Apache-2.0",
        "BSD-2-Clause",
        "BSD-3-Clause",
        "CC-BY-4.0",
        "CC-BY-SA-4.0",
        "CC0-1.0",
        "EUPL-1.2",
        "GPL-2.0",
        "GPL-3.0",
        "LGPL-2.1",
        "LGPL-3.0",
        "MIT",
        "MPL-2.0",
        "OTHER"
      ],
      "type": "string"
    },
    "mailing-list": {
      "description": "The optional mailing list associated with the project.",
      "format": "uri",
      "type": "string"
    },
    "name": {
      "description": "The unique name of the project.",
      "minLength": 10,
      "type": "string"
    },
    "pitch": {
      "description": "The project pitch.",
      "type": "string"
    },
    "repositories": {
      "description": "Repositories associated with the project.",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/repository"
      },
      "uniqueItems": true
    },
    "sponsors": {
      "description": "Sponsors of the project.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/sponsor"
      },
      "minItems": 1
    },
    "tags": {
      "description": "Tags for the project",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 3,
      "uniqueItems": true
    },
    "type": {
      "description": "The type of the project: code, documentation or tool.",
      "enum": ["code", "documentation", "tool"],
      "enumDescriptions": [
        "Code projects",
        "Documentation, standards, etc.",
        "Tools"
      ],
      "type": "string"
    },
    "website": {
      "description": "The official website of the project.",
      "format": "url",
      "minLength": 4,
      "type": "string"
    },
    "social_media": {
      "description": "Social media information for the project",
      "type": "array",
      "items": {
        "$ref": "#/$defs/socialMedia"
      },
      "minItems": 1,
      "additionalProperties": false
    }
  },
  "required": ["audience", "leaders", "level", "name", "pitch", "tags", "type"],
  "title": "OWASP Project",
  "type": "object"
}
