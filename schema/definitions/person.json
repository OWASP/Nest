{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/OWASP/Nest/main/schema/definitions/person.json",
  "type": "object",
  "title": "Leader",
  "description": "A project leader.",
  "required": ["github"],
  "properties": {
    "email": {
      "description": "The leader's email address.",
      "format": "email",
      "type": ["string", "null"]
    },
    "github": {
      "type": "string",
      "description": "The GitHub username.",
      "pattern": "^[a-zA-Z0-9-]{1,39}$"
    },
    "name": {
      "type": ["string", "null"],
      "description": "Leader's name."
    },
    "slack": {
      "type": ["string", "null"],
      "description": "The Slack username.",
      "pattern": "^[a-zA-Z0-9._-]{1,21}$"
    }
  },
  "additionalProperties": false
}
