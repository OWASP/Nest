{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/OWASP/Nest/main/schema/common.json",
  "definitions": {
    "community": {
      "additionalProperties": false,
      "description": "Community",
      "properties": {
        "description": {
          "description": "A brief description of the community.",
          "minLength": 10,
          "type": "string"
        },
        "platform": {
          "description": "The platform used by the community",
          "enum": ["discord", "slack"],
          "type": "string"
        },
        "url": {
          "description": "The URL of the community.",
          "format": "uri",
          "type": "string"
        }
      },
      "required": ["platform", "url"],
      "title": "Community",
      "type": "object"
    },

    "logo": {
      "additionalProperties": false,
      "description": "A logo",
      "properties": {
        "small": {
          "description": "Logo size should be 192x192 pixels.",
          "type": "string",
          "format": "uri"
        },
        "medium": {
          "description": "Logo size should be 256x256 pixels.",
          "type": "string",
          "format": "uri"
        },
        "large": {
          "description": "Logo size should be 512x512 pixels.",
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["small", "medium", "large"],
      "title": "Logo",
      "type": "object"
    },

    "person": {
      "additionalProperties": false,
      "description": "Person",
      "properties": {
        "email": {
          "description": "E-mail address",
          "format": "email",
          "minLength": 5,
          "type": "string"
        },
        "github": {
          "description": "GitHub username",
          "pattern": "^[a-zA-Z0-9-]{1,39}$",
          "type": "string"
        },
        "name": {
          "description": "Full name",
          "minLength": 5,
          "type": "string"
        },
        "slack": {
          "description": "Slack username",
          "pattern": "^[a-zA-Z0-9._-]{1,21}$",
          "type": "string"
        }
      },
      "required": ["github"],
      "title": "Person",
      "type": "object"
    },

    "repository": {
      "additionalProperties": false,
      "description": "A repository",
      "properties": {
        "changelog": {
          "description": "Link to the changelog",
          "format": "uri",
          "minLength": 5,
          "type": "string"
        },
        "code_of_conduct": {
          "description": "Link to the code of conduct",
          "format": "uri",
          "minLength": 5,
          "type": "string"
        },
        "contribution_guide": {
          "description": "Link to the contribution guide",
          "format": "uri",
          "minLength": 5,
          "type": "string"
        },
        "description": {
          "description": "Repository description",
          "minLength": 5,
          "type": "string"
        },
        "name": {
          "description": "Repository name",
          "minLength": 5,
          "type": "string"
        },
        "url": {
          "description": "The repository URL.",
          "format": "uri",
          "minLength": 5,
          "type": "string"
        }
      },
      "required": ["url"],
      "title": "Repository",
      "type": "object"
    },

    "social_media": {
      "additionalProperties": false,
      "description": "A social media platform for the project",
      "properties": {
        "description": {
          "description": "Description of the social media platform",
          "minLength": 5,
          "type": "string"
        },
        "platform": {
          "description": "The type of social media platform.",
          "enum": ["bluesky", "linkedin", "x", "youtube"],
          "type": "string"
        },
        "url": {
          "description": "The URL of the social media profile.",
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["platform", "url"],
      "title": "Social media",
      "type": "object"

    },

    "sponsor": {
      "additionalProperties": false,
      "description": "A sponsor entity",
      "properties": {
        "description": {
          "description": "A brief description of the sponsor",
          "minLength": 5,
          "type": "string"
        },
        "logo": {
          "description": "The URL of the sponsor's logo",
          "format": "uri",
          "type": "string"
        },
        "name": {
          "description": "The name of the sponsor or organization",
          "minLength": 5,
          "type": "string"
        },
        "url": {
          "description": "The URL of the sponsor.",
          "format": "uri",
          "type": "string"
        }
      },
      "required": ["name", "url"],
      "title": "Sponsor",
      "type": "object"
    }
  }
}
