{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/OWASP/Nest/main/schema/committee.json",
  "$defs": {
    "meeting_minutes": {
      "description": "Meeting minutes of the committee.",
      "properties": {
        "date": {
          "description": "Date of the meeting",
          "format": "date",
          "type": "string"
        },
        "url": {
          "description": "Link to the meeting minutes",
          "format": "uri",
          "type": "string"
        }
      },
      "required": [
        "date",
        "url"
      ],
      "title": "Meeting Minutes",
      "type": "object"
    },
    "members": {
      "description": "Leaders of the committee.",
      "properties": {
        "email": {
          "description": "E-mail address",
          "format": "email",
          "type": "string"
        },
        "github": {
          "description": "GitHub username",
          "pattern": "^[a-zA-Z0-9-]{1,39}$",
          "type": "string"
        },
        "name": {
          "description": "Full name",
          "type": "string",
          "minLength": 3
        },
        "role": {
          "description": "Role of leader",
          "enum": [
            "Board Representative",
            "Board Of Director member",
            "Chair",
            "Member",
            "Vice Chair",
            "Secretary",
            "Staff Contact"
          ],
          "type": "string"
        },
        "slack": {
          "description": "Slack username",
          "pattern": "^[a-zA-Z0-9._-]{1,21}$",
          "type": "string"
        }
      },
      "required": [
        "name",
        "role"
      ],
      "title": "Leader",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "description": "OWASP Committee Schema",
  "properties": {
    "community": {
      "description": "Community platforms associated with the committee.",
      "items": {
        "$ref": "common.json#/definitions/community"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "description": {
      "description": "Description of the committee's purpose and activities.",
      "type": "string"
    },
    "events": {
      "description": "Events organized or sponsored by the committee.",
      "items": {
        "format": "uri",
        "type": "string"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "group_mail": {
      "description": "Group mail of the committee.",
      "format": "email",
      "type": "string"
    },
    "logo": {
      "description": "Logo information for the project.",
      "items": {
        "$ref": "common.json#/definitions/logo"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "meeting_minutes": {
      "description": "Meeting minutes of the committee.",
      "items": {
        "$ref": "#/$defs/meeting_minutes"
      },
      "type": "array",
      "uniqueItems": true
    },
    "members": {
      "description": "Members of the committee.",
      "items": {
        "$ref": "#/$defs/members"
      },
      "minItems": 2,
      "type": "array",
      "uniqueItems": true
    },
    "name": {
      "description": "Name of the committee.",
      "minLength": 8,
      "type": "string"
    },
    "resources": {
      "description": "Resources provided by the committee.",
      "items": {
        "additionalProperties": false,
        "properties": {
          "title": {
            "description": "Title of the resource",
            "type": "string"
          },
          "type": {
            "description": "Type of resource (e.g., 'guide', 'tool')",
            "type": "string"
          },
          "url": {
            "description": "Link to access the resource",
            "format": "uri",
            "type": "string"
          }
        },
        "required": [
          "type",
          "title",
          "url"
        ],
        "type": "object"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "scope": {
      "description": "Scope and purpose of committee.",
      "type": "string"
    },
    "social_media": {
      "additionalProperties": false,
      "description": "Social media information of the committee.",
      "items": {
        "$ref": "common.json#/definitions/social_media"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "sponsors": {
      "description": "Sponsors of the committee.",
      "items": {
        "$ref": "common.json#/definitions/sponsor"
      },
      "minItems": 1,
      "type": "array"
    },
    "tags": {
      "description": "Tags associated with the committee.",
      "items": {
        "type": "string"
      },
      "minItems": 3,
      "type": "array",
      "uniqueItems": true
    },
    "website": {
      "description": "Official website of the committee.",
      "format": "uri",
      "minLength": 4,
      "type": "string"
    }
  },
  "required": [
    "description",
    "members",
    "name",
    "scope",
    "tags"
  ],
  "title": "OWASP Committee Schema",
  "type": "object"
}
