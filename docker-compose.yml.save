# Nest/docker-compose.yml
version: "3.9"

services:
  frontend:
    build:
      context: ./frontend          # points to the folder that has your Dockerfile
      dockerfile: Dockerfile
    ports:
      - "3000:3000"                # host:container
    volumes:
      - ./fron       
     - /app/node_modules          
    environment:
      - CHOKIDAR_USEPOLLING=true   
    command: npm run dev           
