{
  "name": "Nest",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint 'frontend//*.{ts,tsx}' --config eslint.config.js",
    "lint:fix": "eslint 'frontend//.{ts,tsx}' --config eslint.config.js --fix",
    "format": "prettier --write 'frontend/**/.{ts,tsx}'",
    "format:check": "prettier --check 'frontend//.{ts,tsx}'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    ".ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.tsx": [
      "eslint --fix",
      "prettier --write"
    ],
    "/node_modules/*": "echo 'Skipping node_modules/'"
  }
}
